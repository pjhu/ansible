cadvisor:
  image: google/cadvisor
  command: |
    -storage_driver="elasticsearch"
    -alsologtostderr=true
    -storage_driver_es_host="http://{{ es_host | default('127.0.0.1') }}:{{ es_port }}"
    -storage_driver_es_index="cadvisor"
    -storage_driver_es_type="{{ es_type | default('container_stats') }}"
  ports:
    - "{{ cadvisor_port | default(18080) }}:8080"
  volumes:
    - /:/rootfs:ro
    - /var/run:/var/run:rw
    - /sys:/sys:ro
    - /var/lib/docker/:/var/lib/docker:ro
